<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/default_background</item>
        <item name="android:colorBackground">@color/default_background</item>
        <item name="actionBarColor">@color/ab_toolbar_color</item>
    </style>

    <!-- ActionBar / ToolBar -->
    <style name="ToolBar.ActionBar" parent="ToolBar.Light.DarkActionBar"/>

    <style name="ToolBar.Light.DarkActionBar" parent="ToolBar.DarkActionBar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
    <style name="ToolBar.DarkActionBar" parent="ToolBar.ActionBar.Base">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
    <style name="ToolBar.ActionBar.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/actionBarColor</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <!-- General -->
    <style name="DividerLineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_line</item>
    </style>
    <style name="DividerLineHorizontalLight" parent="DividerLineHorizontal">
        <item name="android:background">@color/divider_line_light</item>
    </style>
    <style name="SettingsTheme" parent="@style/Theme.AppCompat">
    </style>

    <!-- Drawer -->
    <style name="NavigationDrawerList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/drawer_background</item>
        <item name="android:divider">@color/drawer_list_line</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <!-- Lists -->
    <style name="ListViewHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/list_header_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    <style name="ListViewHeaderLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/list_header_line</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="ListTextItemLayout">
        <item name="android:padding">5dp</item>
    </style>
    <style name="ListItem" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/default_text</item>
    </style>
    <style name="ListItemTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/list_item_title</item>
    </style>
    <style name="ListItemSubtitle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/list_item_subtitle</item>
    </style>
    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:background">@color/white_background</item>--> <!-- this was moved to "list_view" style, because scroll bars would not be visible with StickyHeaderListView -->
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>

</resources>
