<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/toolbar_actionbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/about_title"
                android:textSize="32sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/about_for"
                android:textSize="30sp"
                android:textStyle="italic"
                android:typeface="serif"
                />

            <TextView
                android:id="@+id/versionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:text="Version 1.0.0.0"
                />

            <Button
                android:id="@+id/createDatabaseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Database"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test REST Call"
                android:id="@+id/restTestButton"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/rxTestButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RX Test"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Job Scheduler Call"
                android:id="@+id/jobTestButton"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/test_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>