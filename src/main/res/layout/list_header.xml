<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/list_view_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@color/default_background"
        >
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

    <TextView
            android:id="@+id/list_view_header_name"
            style="@style/list_view_header"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="HEADER"
            />
    <View
            android:id="@+id/list_view_header_line"
            style="@style/list_view_header_line"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

    <ImageView
            android:id="@+id/listview_header_sidebar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/list_item_edge"
            android:gravity="right|top|bottom"
            android:visibility="gone"
            />
</LinearLayout>