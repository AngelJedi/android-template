<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/drawer_primary_item_background"
             android:foreground="@drawable/abc_item_background_holo_dark"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/drawer_item_icon"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/ic_action_directory"
            />

        <TextView
            android:id="@+id/drawer_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/default_text_light"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="Directory"
            />
    </LinearLayout>
</FrameLayout>
